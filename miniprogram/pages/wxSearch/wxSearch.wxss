.wxSearch{
  position: absolute;
  top: 86rpx;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
}

.placeholder{
  padding: 60%;
  width: 100%;
  background: #f8f8f8;
}

.wxSearchInner{
  background-color: #fff;
}
.wxSearch-section{
  background-color: #fff;
  padding: 10rpx 20rpx;
  border: 2rpx #eee;
}
.wxSearch-pancel{
  display: flex;
  flex-direction: row;
}
.wxSearch-input{
  flex: 8; 
  background-color: #eee;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
}
.wxSearch-button{
  flex: 1;
  border: none !important;
  color: black !important;
}

.wxSearchTitle{
  display: block;
  padding: 20rpx 10rpx 10rpx 20rpx;
  font-size: 24rpx;
  text-align: center;
}


.wxSearchMindKeyItem{
  padding: 20rpx 10rpx;
  border-bottom: 2rpx solid #eee;
  display: flex;
  font-size: 28rpx;
  color: black;
}

.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 10rpx;
}

.wxSearchKeyItem{
  /* flex: 0 0 20%; */
  font-size: 28rpx;
  text-align: center;
  border: 2rpx solid #eee;
  margin: 10rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;  
  color: black;
}
.wxSearchHistoryItem{
  padding: 20rpx 10rpx 10rpx 10rpx;
  border-bottom: 2rpx solid #eee;
  display: flex;
}
.wxSearchHistoryItemText{
  flex: 8;
  font-size: 28rpx;
}
.wxSearchHistoryItemDel{
  width: 26rpx;
  height: 26rpx;
  padding: 6rpx 12rpx;
}
.wxSearchHistoryEmpty{
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
}
.wxSearchDeleteAllBtn{
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 12px;
}